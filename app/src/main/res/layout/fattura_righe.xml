<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/fatturarigaback"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:paddingLeft="10dp"
		android:paddingRight="10dp">

		<TextView
			android:id="@+id/fatturarighe_codice"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:textSize="16dip"
			android:textStyle="bold">

		</TextView>

		<TextView
			android:id="@+id/fatturarighe_descrizione"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/fatturarighe_codice"
			android:paddingLeft="2dp"
			android:textScaleX="0.9"
			android:textSize="16dip"
			android:textStyle="bold" />

	<!--	<TextView
			android:id="@+id/fatturarighe_lotto"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/fatturarighe_um"
			android:paddingLeft="2dp"
			android:textSize="16dip"
			android:textStyle="bold" />-->

		<TextView
			android:id="@+id/fatturarighe_um"
			android:layout_width="30dp"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/fatturarighe_qta"
			android:paddingLeft="2dp"
			android:textSize="16dip"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/fatturarighe_qta"
			android:layout_width="60dp"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/fatturarighe_flagReso"
			android:gravity="right"
			android:paddingLeft="2dp"
			android:textSize="16dip"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/fatturarighe_flagReso"
			android:layout_width="20dp"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/fatturarighe_prezzo"
			android:gravity="right"
			android:paddingLeft="2dp"
			android:textSize="16dip"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/fatturarighe_prezzo"
			android:layout_width="54dp"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/fatturarighe_importo"
			android:gravity="right"
			android:paddingLeft="2dp"
			android:textSize="16dip"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/fatturarighe_importo"
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:gravity="right"
			android:paddingLeft="2dp"
			android:textSize="16dip"
			android:textStyle="bold" />

	</RelativeLayout>

</LinearLayout>

